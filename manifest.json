{
  "name": "GitHub Checker",
  "version": "0.1",
  "description": "Displays the number of pull requests waiting for your review on GitHub",
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "permissions": [
    "https://api.github.com/*",
    "storage"
  ],
  "options_page": "options.html",
  "browser_action": {
    "default_title": "GitHub Checker"
  },
  "icons": {
    "16": "./images/icon16.png",
    "48": "./images/icon48.png",
   "128": "./images/icon128.png"
  },
  "content_security_policy": "script-src 'self' 'sha256-B+Qe/KNUDtGDd/m1g5ycAq1DgpLs9ubKmYTlOHBogC8='; object-src 'self'",
  "manifest_version": 2
}
